<p id="notice"><%= notice %></p>

<h1>Listing Request Loans</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date</th>
      <th>Loan sum</th>
      <th>Accepted</th>
      <th>Loan percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_loans.each do |request_loan| %>
      <tr>
        <td><%= request_loan.customer_id %></td>
        <td><%= request_loan.date %></td>
        <td><%= request_loan.loan_sum %></td>
        <td><%= request_loan.accepted %></td>
        <td><%= request_loan.loan_percent %></td>
        <td><%= link_to 'Show', request_loan %></td>
        <td><%= link_to 'Edit', edit_request_loan_path(request_loan) %></td>
        <td><%= link_to 'Destroy', request_loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

