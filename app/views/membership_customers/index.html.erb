<p id="notice"><%= notice %></p>

<h1>Listing Membership Customers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date</th>
      <th>Sum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @membership_customers.each do |membership_customer| %>
      <tr>
        <td><%= membership_customer.customer_id %></td>
        <td><%= membership_customer.date %></td>
        <td><%= membership_customer.sum %></td>
        <td><%= link_to 'Show', membership_customer %></td>
        <td><%= link_to 'Edit', edit_membership_customer_path(membership_customer) %></td>
        <td><%= link_to 'Destroy', membership_customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

