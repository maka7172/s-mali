<p id="notice"><%= notice %></p>

<h1>Listing Payoffs</h1>

<table>
  <thead>
    <tr>
    
      <th>Payment</th>
      <th>Usance</th>
      <th>Forfeit</th>
      <th>Sum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payoffs.each do |payoff| %>
      <tr>

        <td><%= payoff.payment %></td>
        <td><%= payoff.usance_id %></td>
        <td><%= payoff.forfeit %></td>
        <td><%= payoff.sum %></td>
        <td><%= link_to 'Show', payoff %></td>
        <td><%= link_to 'Edit', edit_payoff_path(payoff) %></td>
        <td><%= link_to 'Destroy', payoff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

